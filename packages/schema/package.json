{
  "name": "@lybic/schema",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./locales/*": {
      "types": "./locales.d.ts",
      "import": "./dist-locales/*.mjs"
    }
  },
  "devDependencies": {
    "@lingui/cli": "^5.6.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "watch": "tsc -w --incremental",
    "build": "tsc && lingui compile",
    "lingui:extract": "lingui extract --workers 1",
    "lingui:compile": "lingui compile"
  },
  "dependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  }
}
